  <section class="anio pastel-residencia">
    <h2>Residencia</h2>
    <div class="aclaracion">Para cursar la residencia, necesitás tener aprobadas todas las materias de tercer año y los finales de: Lengua Inglesa IV, Traducción Técnico-Científica II, Traducción Literaria II y Expresión Oral y Escrita en Español.</div>

    <div class="materia"><input type="checkbox" id="residencia" disabled> <label for="residencia">Práctica Profesionalizante (Residencia)</label></div>
  </section>

  <script>
    function actualizar() {
      const get = id => document.getElementById(id).checked;

      document.getElementById("trad2").disabled = !(get("ingles1") && get("gram1") && get("trad1") && get("esp1"));
      document.getElementById("ingles2").disabled = !(get("ingles1") && get("gram1") && get("fono1"));
      document.getElementById("gram2").disabled = !(get("ingles1") && get("gram1"));
      document.getElementById("fono2").disabled = !get("fono1");
      document.getElementById("esp2").disabled = !get("esp1");
      document.getElementById("lit").disabled = !get("cultura");
      document.getElementById("term").disabled = !get("info");

      const segundo = ["trad2", "ingles2", "gram2", "fono2", "esp2", "lit", "term"].filter(id => get(id));
      const segundoListo = segundo.length >= 3 && ["ingles1", "esp1", "trad1", "fono1", "gram1", "cultura", "info"].every(id => get(id));

      document.getElementById("lit1").disabled = !(get("ingles2") && get("gram2") && get("lit") && get("esp2") && get("trad2"));
      document.getElementById("tec1").disabled = !(get("ingles2") && get("gram2") && get("esp2") && get("trad2"));
      document.getElementById("inter1").disabled = !(get("ingles2") && get("fono2") && get("esp2") && get("trad2"));
      document.getElementById("ingles3").disabled = !(get("ingles2") && get("gram2") && get("fono2"));
      document.getElementById("estructuras").disabled = !(get("trad2") && get("gram2") && get("esp2"));
      document.getElementById("lit20").disabled = !get("lit");
      document.getElementById("rio").disabled = !get("esp2");

      const tercer = ["lit1", "tec1", "inter1", "ingles3", "estructuras", "lit20", "rio"].filter(id => get(id));
      const tercerListo = tercer.length >= 3 && ["ingles1", "esp1", "trad1", "fono1", "gram1", "cultura", "info"].every(id => get(id));

      document.getElementById("inversa").disabled = !(get("ingles3") && get("lit1") && get("inter1") && get("rio") && get("estructuras") && get("tec1"));
      document.getElementById("lit2").disabled = !(get("ingles3") && get("lit1") && get("lit20") && get("rio") && get("estructuras"));
      document.getElementById("tec2").disabled = !(get("ingles3") && get("tec1") && get("rio") && get("estructuras"));
      document.getElementById("inter2").disabled = !(get("ingles3") && get("tec1") && get("inter1") && get("estructuras"));
      document.getElementById("ingles4").disabled = !get("ingles3");
      document.getElementById("ling").disabled = (get("lit1") && get("tec1") && get("estructuras")) ? false : true;
      document.getElementById("expresion").disabled = !(get("rio") && get("estructuras"));
      document.getElementById("desempeno").disabled = !(get("tec1") && get("lit1"));

      // Residencia
      const residenciaListo =
        tercer.every(id => get(id)) &&
        get("ingles4") && get("tec2") && get("lit2") && get("expresion");

      document.getElementById("residencia").disabled = !residenciaListo;
    }
  </script>
